@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a class="btn btn-primary mt-2" asp-action="Create">Create New Department</a>
</div>
@if (Model.Any())
{
    <h1 class="text-center ">All Departments</h1>
    <table class="table mt-3 table-bordered table-hover">
        <thead>
            <tr>

                <th scope="col" class="text-center">@Html.DisplayNameFor(d => d.Code)</th>
                <th scope="col" class="text-center">@Html.DisplayNameFor(d => d.Name)</th>
                <th scope="col" class="text-center">@Html.DisplayNameFor(d => d.DateOfCreation)</th>
                <th scope="col" class="text-center">Details</th>

                <th scope="col" >Edit</th>
                <th scope="col" >Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation</td>
                    <partial name="_ButtonsPartialView" Model="@item.Id">

                  </partial>
                </tr>

            }

        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-warning">
        <h2 class="text-center">No Departments</h2>
    </div>
}

